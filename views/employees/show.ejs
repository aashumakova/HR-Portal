<%- include('../partials/header.ejs') %>

<h3>
    <%= employee.name %>
</h3>

<section id="show-page">
    <div>Employee Name: </div>
    <div><%= employee.name %></div>
    <div>Employee Title: </div>
    <div><%= employee.title %></div>
    <div>Date Hired: </div>
    <div><%= employee.dateHired %></div>
    <div>Nursing License Up To Date: </div>
    <div><%= employee.license ? 'Yes' : 'No' %></div>
    
  </section>

  
  <br><br><h2>Annual Evaluation</h2>
  <form id="add-review-form" method="POST"
    action="/evaluations/employees/<%= employee._id %>/evaluations">
    <label>Annual Evaluation:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Annual Evaluation">
  </form>

<a href="/employees/<%= employee.id %>/edit">Edit</a>

<table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Annual Evaluation</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% employee.evaluation.forEach(function(e) { %>
        <tr>
            <td class="evaluation-user"><img alt="avatar" src="<%= e.userAvatar %>" src="<%= e.userName %>" referrerpolicy="no-referrer"><%= e.userName %></td>
            <td><%= e.createdAt.toLocaleDateString() %></td>
            <td><%= e.content %></td>
            <td><%= e.rating %></td>
        </tr>
      <% }); %>
    </tbody>
</table>


<%- include('../partials/footer.ejs') %>